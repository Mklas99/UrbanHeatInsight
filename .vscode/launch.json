{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI Backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run Frontend Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
    {
      "name": "Run MLflow UI",
      "type": "python",
      "request": "launch",
      "program": "/usr/local/bin/mlflow",
      "args": [
        "ui",
        "--host",
        "0.0.0.0",
        "--port",
        "5000"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run All",
      "configurations": [
        "Run FastAPI Backend",
        "Run Frontend Dev Server",
        "Run MLflow UI"
      ]
    }
  ]
}

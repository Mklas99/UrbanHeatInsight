{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": true,      "env": {
        "PYTHONPATH": "/workspace/backend"
      }
    },
    {
      "name": "Watch Frontend Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Run MLflow UI",
      "type": "debugpy",
      "request": "launch",
      "program": "/usr/local/bin/mlflow",
      "args": [
        "ui",
        "--host",
        "0.0.0.0",
        "--port",
        "5000"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Run pgAdmin 4",
      "type": "python",
      "request": "launch",
      "program": "/usr/local/bin/pgadmin4",
      "args": [
        "--host",
        "0.0.0.0",
        "--port",
        "5050"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run All",
      "configurations": [
        "Run FastAPI Backend",
        "Run Frontend Dev Server",
        "Run MLflow UI",
        "Run pgAdmin 4"
      ]
    }
  ]
}
